<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- fade -->
            <include
                android:id="@+id/category_fade"
                layout="@layout/item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- free fall -->
            <include
                android:id="@+id/category_free_fall"
                layout="@layout/item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- scale spring -->
            <include
                android:id="@+id/category_scale_spring"
                layout="@layout/item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- chained spring -->
            <include
                android:id="@+id/category_chained_spring"
                layout="@layout/item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- translate spring -->
            <include
                android:id="@+id/category_translate_spring"
                layout="@layout/item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- fling -->
            <include
                android:id="@+id/category_fling"
                layout="@layout/item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>